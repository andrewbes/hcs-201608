#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main(int argc, char* argv[])
{
    char* orig_phrase = malloc(sizeof(char) * 100);
    int lenmk = 0;
    char* mk;
    if (argc != 2)
    {
        printf("Enter the wrong encryption key");
        return 1;
    }
    else
    {
        mk = (argv[1]);
        lenmk = strlen(mk);
        for (int i = 0; i<lenmk; i++)
        {
            if ((mk[i] > 64) && (mk[i] <= 91))
                mk[i] += -65;
            if ((mk[i] > 96) && (mk[i] <= 123))
                mk[i] += -97;
         }
    }
            
        int len = 0;
    // data input unit
        while (len == 0)
    // can not enter blank stringt
        {
    // Enter original phrase");    
            fgets(orig_phrase, 100, stdin);
            len = strlen(orig_phrase);
        }
        int j=0;
        for ( int i = 0; i < len; i++)
        {
            int k = mk[j%lenmk];;
            //char orig_phrase[i] = orig_phrase[i];
            if ((orig_phrase[i] > 96) && (orig_phrase[i] <= 123))
                if (orig_phrase[i] + k < 123)
                {
                    printf("%c", (orig_phrase[i] + k));
                    j++;
                }
                else
                {
                    printf("%c", ((orig_phrase[i] - 96 + k) % 26) + 96);
                    j++;
                }
            else  
            if ((orig_phrase[i] > 64) && (orig_phrase[i] <= 91))
                if (orig_phrase[i] + k < 91)
                {
                    printf("%c", (orig_phrase[i] + k));
                    j++;
                }
                else
                {
                    printf("%c", ((orig_phrase[i] - 64 + k) % 26) + 64);
                    j++;
                }
            else
            {
                printf("%c", orig_phrase[i]);
            }
        }
        printf("\n");
        return 0;
}
 
